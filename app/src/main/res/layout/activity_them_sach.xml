<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QLSach.ThemSachActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Thể Loại:" />

            <EditText
                android:id="@+id/edTypeThemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Tên sách:" />

            <EditText
                android:id="@+id/edNameThemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Mã Sách:" />

            <EditText
                android:id="@+id/edIDSachThemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Tác Giả:" />

            <EditText
                android:id="@+id/edAuthorThemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Nhà XB:" />

            <EditText
                android:id="@+id/edNhaXBThemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Số Lượng:" />

            <EditText
                android:id="@+id/edAmountThemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70dp"
                android:gravity="right"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text="Giá Bìa:" />

            <EditText
                android:id="@+id/edPriceThemSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLuuThemSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:text="Lưu" />

            <Button
                android:id="@+id/btnHuyThemSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Hủy" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>